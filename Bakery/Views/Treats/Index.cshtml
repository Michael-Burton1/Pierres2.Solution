@{
  Layout = "_Layout";
}

@using Bakery.Models;

<h1>All our treats;</h1>

@if (@Model.Count == 0)
{
  <h3>Sorry, We are all out of stock rigth now :(</h3>
}

<ul>
  @foreach (Treat treat in Model)
  {
    <li>@Html.ActionLink($"{treat.Name}", "Details", new { id = treat.TreatId })</li>
  }
</ul>

<p>@Html.ActionLink("Add a Treat", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>