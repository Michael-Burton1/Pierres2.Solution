@{
  Layout = "_Layout";
}

@model Bakery.Models.Treat

<h4>Add a new treat</h4>
@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name, new {@class = "form-control", type="text", required="text"} )

  @Html.LabelFor(model => model.Price)
  @Html.TextBoxFor(model => model.Price, new {@class = "form-control", type="number", required="text"})

  @Html.LabelFor(model => model.Style)
  @Html.TextBoxFor(model => model.Style, new {@class = "form-control", type="text", required="text"})

  @Html.LabelFor(model => model.PrepTime)
  @Html.TextBoxFor(model => model.PrepTime, new {@class = "form-control", type="number", required="text"})
  <input type="submit" value="Add new treat" />
}
<p>@Html.ActionLink("Show all treats", "Index")</p>