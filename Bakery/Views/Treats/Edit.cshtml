@{
  Layout = "_Layout";
}

@model Baker.Models.Treat

<h3>Edit</h3>

<h4>Edit @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.TreatId)

  @Html.LabelFor(model => model.Name)
  @Html.EditorFor(model => model.Name, new {@class = "form-control", type="text", required="text"} )

  @Html.LabelFor(model => model.Price)
  @Html.EditorFor(model => model.Price, new {@class = "form-control", type="number", required="text"} )

  @Html.LabelFor(model => model.Style)
  @Html.EditorFor(model => model.Style, new {@class = "form-control", type="text", required="text"} )

  @Html.LabelFor(model => model.PrepTime)
  @Html.EditorFor(model => model.PrepTime, new {@class = "form-control", type="number", required="text"} )

  <input type="submit" value="Update Treat info" />
}

<p>@Html.ActionLink("Back to treats", "Index")