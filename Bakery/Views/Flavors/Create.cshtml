@{
  Layout = "_Layout";
}

@model Bakery.Models.Flavor

<h4>Add a new flavor</h4>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name, new {@class = "form-control", type="text", required="text"} )

  @Html.LabelFor(model => model.Type)
  @Html.TextBoxFor(model => model.Type, new {@class = "form-control", type="text", required="text"})

  @Html.LabelFor(model => model.Rating)
  @Html.TextBoxFor(model => model.Rating, new {@class = "form-control", type="number", required="text"})

  <input type="submit" value="Add new flavor" class="btn btn-primary" />
}
<p>@Html.ActionLink("Show all flavors", "Index")</p>